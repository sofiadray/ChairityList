<div class = "col-md-8">
	<% @categories.each do |category|%>

		<div class = "col-md-2" >
			<h5> <%= link_to "#{category.name}", category_path(category.id) %> </h5>

			<% @charities.each do |charity| %>
				<% if charity.category_id == category.id %>
					<h6> <%= link_to "#{charity.name}", charity_path(charity.id) %> </h6>
				<% end %>
			<% end %>

		</div>

	<% end %>
