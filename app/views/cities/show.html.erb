<div class = "col-md-3">
	<h2>charityList</h2>
</div>

<div class="row">
	<div class = "col-md-8" id = "header">
		<h2> <%= @city.name.downcase %> </h2>
	</div>

	<div class = "col-md-3">
	</div>

	<div class = "col-md-9">
	<% @categories.each do |category|%>

		<div class = "col-md-2" >
			<h5> <%= category.name %> </h5>

			<% @charities.each do |charity| %>
				<% if charity.category_id == category.id %>
					<h6> <%= link_to "#{charity.name}", charity_path(charity.id) %> </h6>
				<% end %>
			<% end %>

		</div>

	<% end %>
	</div>

</div>

</div>