<div class="container"> 
  <div class = "col-md-4">


    <h2><%= t('.post_header') %></h2>

    <%= simple_form_for [@charity, @post], { wrapper_html: { class: 'form-control' } } do |form| %>
      <%= form.input :title %>
      <%= form.input :type %>
      <%= form.input :content %>
      <%= form.association :charity, label_method: :name %>
      <%= form.submit class: 'btn btn-default' %>
    <% end %>
  </div>

</div>