<div class="container">
  <div class = "col-md-4">

  <h2><%= t('.add_charity_header') %></h2>
    <%= simple_form_for @charity do |form| %>
      <%= form.input :name %>
      <%= form.input :image %>
      <%= form.input :website %>
      <%= form.input :overview %>
      <%= form.input :real, :label => "Charity status:", as: :radio_buttons, :collection => [['This is a real charity.', true], ['This is an idea for a charity.', false]] %>
      <%= form.association :category, label_method: :name %>
      <%= form.submit class: 'btn btn-default' %>
    <% end %>

  </div>
</div>